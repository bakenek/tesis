<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.ViewActivityDashboard">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:backgroundTint="@color/fondo">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="360dp">

                                <ImageView
                                    android:id="@+id/imageViewserviciovista"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="center"
                                    android:background="#6A6868"
                                    app:srcCompat="@drawable/ic_baseline_panorama_24" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:layout_weight="0.25" />

                        <RatingBar
                            android:id="@+id/ratingBarServicio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="Califica el servicio"
                            android:numStars="5"
                            android:progressTint="@color/purple_500"
                            android:rating="0"
                            android:scaleX="0.8"
                            android:scaleY="0.8" />

                        <TextView
                            android:id="@+id/textViewpromedio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="8dp" />

                        <TextView
                            android:id="@+id/nombreserviciovista"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:gravity="center"
                            android:text="titulo del servicio"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/purple_500"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <TextView
                            android:id="@+id/descipcionserviciovista"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingTop="13dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="13dp"
                            android:text="descripcion"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="20dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="7dp"
                        android:paddingTop="5dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="5dp">

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Creador :  "
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                            <TextView
                                android:id="@+id/TextViewiraperfilusuario"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cargando..."
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorsecundario" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/TextViewcreadoFechaContacto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="fecha:    contacto:"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorsecundario"
                    android:outlineAmbientShadowColor="@color/colorsecundario"
                    android:outlineSpotShadowColor="@color/colorsecundario"
                    app:cardCornerRadius="360dp">

                    <Button
                        android:id="@+id/buttonsolicitar"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/colorsecundario"
                        android:outlineAmbientShadowColor="@color/colorsecundario"
                        android:outlineSpotShadowColor="@color/colorsecundario"
                        android:shadowColor="@color/colorsecundario"
                        android:text="Solicitar"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>
</RelativeLayout>